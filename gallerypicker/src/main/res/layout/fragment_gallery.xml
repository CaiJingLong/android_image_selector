<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="#333333"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <top.kikt.gallerypicker.ui.widget.RadioImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/bar_height"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/textButtonPadding"
            android:paddingStart="@dimen/textButtonPadding"
            android:text="选择图片"
            android:textColor="#FFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/textButtonPadding"
            android:paddingStart="@dimen/textButtonPadding"
            android:text="完成"
            android:textColor="#fff" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="#333"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_gallery_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/textButtonPadding"
            android:paddingStart="@dimen/textButtonPadding"
            android:text="所有图片"
            android:textColor="#FFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/textButtonPadding"
            android:paddingStart="@dimen/textButtonPadding"
            android:text="预览"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>
